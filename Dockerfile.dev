FROM node:20-alpine

# Install build dependencies
RUN apk add --no-cache python3 make g++

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose application and debug ports
EXPOSE 8080 9229

# Start with debugging enabled and watch mode
CMD ["npm", "run", "dev"]
